<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.evenements.creation.MainCreationEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:gravity="center"
            app:elevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/buttonBack"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

                <TextView
                    android:id="@+id/textView67"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/creation_event_title"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorPrimary" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewProgressCreationPhoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_stepview"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/imageProgessCreationPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:contentDescription="@string/TODO"
                        app:srcCompat="@drawable/ic_baseline_image_24_grey" />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/viewStepName"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:background="#aaaaaa" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewProgressCreationName"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#aaaaaa"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_stepview"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/imageProgessCreationName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:contentDescription="@string/TODO"
                        app:srcCompat="@drawable/ic_baseline_text_fields_24" />

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/viewStepDate"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:background="#aaaaaa" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewProgressCreationDate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#aaaaaa"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_stepview"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/imageProgessCreationDate"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/TODO"
                        app:srcCompat="@drawable/ic_baseline_event_24" />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/viewStepPosition"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:background="#aaaaaa" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewProgressCreationAdress"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#aaaaaa"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_stepview"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/imageProgessCreationPosition"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:contentDescription="@string/TODO"
                        app:srcCompat="@drawable/ic_baseline_my_location_24" />

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/viewStepCost"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:background="#aaaaaa" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewProgressCreationCost"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#aaaaaa"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_stepview"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/imageProgessCreationCost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:contentDescription="@string/TODO"
                        app:srcCompat="@drawable/ic_baseline_euro_symbol_24" />

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/viewStepMembers"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:background="#aaaaaa" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewProgressCreationMembers"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#aaaaaa"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_stepview"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/imageProgessCreationMembers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:contentDescription="@string/TODO"
                        app:srcCompat="@drawable/ic_round_groups_24" />

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/viewStepFinal"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:background="#aaaaaa" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/textViewVisibility"
                android:layout_weight="1"
                android:background="@drawable/custom_search"
                android:drawableStart="@drawable/event_sport"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:text="@string/ci_sport"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textViewVisibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:background="@drawable/custom_search"
                android:drawableStart="@drawable/add_event_public"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:text="@string/location_public"
                android:textColor="@color/black" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textViewTitleEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/title_creation_event_photo"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <FrameLayout
            android:id="@+id/fragmentCreationEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@color/white" />

        <Button
            android:id="@+id/buttonNextFragmentMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/custom_button_simple"
            android:paddingStart="100dp"
            android:paddingEnd="100dp"
            android:text="@string/suivant"
            android:textColor="@color/white" />

    </LinearLayout>

    <View
        android:id="@+id/viewGrey2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#39292929"
        android:visibility="gone" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sheetCreateEvent"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/custom_header_bottom_sheet"
        android:focusableInTouchMode="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView43"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/bottom_sheet_line" />

            <TextView
                android:id="@+id/textView65"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/modify_visibility"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView61"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/location_public_maj" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewPublic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="150dp">

                        <ImageView
                            android:id="@+id/imageView35"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/add_event_public" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView64"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/info_visibility_public" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView62"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/location_private_maj" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewPrivate"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="150dp">

                        <ImageView
                            android:id="@+id/imageView37"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/add_event_prive" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView63"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/info_visibility_private" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sheetCreateEventType"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/custom_header_bottom_sheet"
        android:focusableInTouchMode="true"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/bottom_sheet_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                android:text="@string/modify_type"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <Spinner
                    android:id="@+id/spinnerType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gradient_spinner" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>