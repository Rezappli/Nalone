<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup_navigation"
    app:startDestination="@id/signUpInfosFragment">

    <fragment
        android:id="@+id/signUpInfosFragment"
        android:name="com.example.nalone.signUpActivities.SignUpInfosFragment"
        android:label="fragment_sign_up_infos"
        tools:layout="@layout/fragment_sign_up_infos">
        <action
            android:id="@+id/action_signUpInfosFragment_to_signUpCenterInterestFragment"
            app:destination="@id/signUpCenterInterestFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpLocationFragment"
        android:name="com.example.nalone.signUpActivities.SignUpLocationFragment"
        android:label="fragment_sign_up_location"
        tools:layout="@layout/fragment_sign_up_location">
        <action
            android:id="@+id/action_signUpLocationFragment_to_signUpLoginFragment"
            app:destination="@id/signUpLoginFragment" />
        <action
            android:id="@+id/action_signUpLocationFragment_to_signUpCenterInterestFragment"
            app:destination="@id/signUpCenterInterestFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpLoginFragment"
        android:name="com.example.nalone.signUpActivities.SignUpLoginFragment"
        android:label="fragment_sign_up_login"
        tools:layout="@layout/fragment_sign_up_login">
        <action
            android:id="@+id/action_signUpLoginFragment_to_signUpLocationFragment"
            app:destination="@id/signUpLocationFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpCenterInterestFragment"
        android:name="com.example.nalone.signUpActivities.SignUpCenterInterestFragment"
        android:label="fragment_sign_up_center_interest"
        tools:layout="@layout/fragment_sign_up_center_interest">
        <action
            android:id="@+id/action_signUpCenterInterestFragment_to_signUpInfosFragment"
            app:destination="@id/signUpInfosFragment" />
        <action
            android:id="@+id/action_signUpCenterInterestFragment_to_signUpLocationFragment"
            app:destination="@id/signUpLocationFragment" />
    </fragment>
</navigation>